<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CameraView">
        <attr name="iconSize" format="dimension" />
        <attr name="iconMargin" format="dimension" />
        <attr name="iconSrc" format="reference" />
        <attr name="iconLeft" format="reference" />
        <attr name="iconRight" format="reference" />
        <attr name="duration_max" format="integer" />
        <attr name="switchCameraEnabled" format="boolean" />
        <attr name="switchFlashEnabled" format="boolean" />
        <attr name="leftButtonType" format="enum">
            <enum name="image" value="0" />
            <enum name="text" value="1" />
        </attr>
        <attr name="previewEnabled" format="boolean" />
    </declare-styleable>

</resources>